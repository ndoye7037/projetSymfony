{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
    <div class="container">
        {% if error %}
            <div class="alert alert-danger">{{error.messageKey}}</div>
        {% endif %}
        <form method="post">
            <label for="email">E-mail</label>
            <input type="email" name="_username" id="email" value="{{last_email}}" required class="form-control">

            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" required class="form-control">
            <div>
                <a href={{path("user_create")}}>Vous n'avez de compte ? Cr√©ez-en un !</a>
            </div>
            <input type="submit" value="Se connecter" class='btn btn-primary mt-2'>
        </form>
    </div>
{% endblock %}
