{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4 shadow">
                    <h2 class="text-center mb-4">Connexion</h2>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">E-mail</label>
                            <input type="email" name="_username" id="email" value="{{ last_email }}" required class="form-control" autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" name="_password" id="password" required class="form-control">
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="mt-3">
                            <a href="{{ path('user_create') }}">Vous n'avez pas de compte ? Cr√©ez-en un !</a>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mt-3">Se connecter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
