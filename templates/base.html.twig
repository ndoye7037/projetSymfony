<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Recettes{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('home') }}">Cuisine de Rokhaya</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('read_all_recipe') }}">Voir les recettes</a>
                </li>
            </ul>
            <div class="navbar-nav">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link text-success font-weight-bold" href="{{ path('recipe_create') }}">Ajouter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="{{ path('manage_recipe') }}">Gérer / Modifier</a>
                    </li>
                    <span class="navbar-text mx-3 text-light border-start ps-3">{{ app.user.userIdentifier }}</span>
                    <a href="{{ path('logout') }}" class="btn btn-danger btn-sm ms-2">Déconnexion</a>
                {% else %}
                    <a href="{{ path('login') }}" class="btn btn-primary btn-sm">Connexion</a>
                {% endif %}
            </div>
        </div>
    </div>
</nav>

<div class="container">
    {% block body %}{% endblock %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
